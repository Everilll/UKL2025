generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model user {
  id        Int        @id @default(autoincrement())
  username  String     @unique
  password  String
  role      role
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  dosen     dosen?
  mahasiswa mahasiswa?
}

model dosen {
  id            Int           @id @default(autoincrement())
  nidn          Int           @unique
  nama_dosen    String
  jenis_kelamin jenis_kelamin
  alamat        String
  role          role          @default(DOSEN)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  user_id       Int           @unique
  user          user          @relation(fields: [user_id], references: [id])
  matakuliahs   matakuliah[]
  penjadwalans  penjadwalan[]
}

model matakuliah {
  id              Int           @id @default(autoincrement())
  id_matakuliah   String        @unique
  nama_matakuliah String
  id_dosen        Int
  sks             Int
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  dosen           dosen         @relation(fields: [id_dosen], references: [nidn])
  penjadwalans    penjadwalan[]
}

model mahasiswa {
  id             Int           @id @default(autoincrement())
  nim            String        @unique
  nama_mahasiswa String
  jenis_kelamin  jenis_kelamin
  jurusan        String
  role           role          @default(MAHASISWA)
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  user_id        Int           @unique
  user           user          @relation(fields: [user_id], references: [id])
}

model penjadwalan {
  id            Int        @id @default(autoincrement())
  id_dosen      Int
  id_matakuliah Int
  hari          hari
  start_time    String
  end_time      String
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  dosen         dosen      @relation(fields: [id_dosen], references: [nidn])
  matakuliah    matakuliah @relation(fields: [id_matakuliah], references: [id])
}

enum jenis_kelamin {
  L
  P
}

enum role {
  ADMIN
  MAHASISWA
  DOSEN
}

enum hari {
  SENIN
  SELASA
  RABU
  KAMIS
  JUMAT
  SABTU
  MINGGU
}